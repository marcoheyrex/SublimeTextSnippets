function TrimArray(\$${1:stringOrArrayValue}){

    if (!is_array(\$${1:stringOrArrayValue}))
        return trim(\$${1:stringOrArrayValue});

    return array_map('TrimArray', \$${1:stringOrArrayValue});
}
